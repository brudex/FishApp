<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainContainer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.8">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/fish4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="5dp"
                android:text="Fish Health and Water Quality"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="20dp"
                android:id="@+id/relRecord">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:src="@drawable/mic_shape"
                    android:id="@+id/mic"
                    android:layout_centerInParent="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="10dp"
                    android:text="Record"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:layout_below="@+id/mic"
                    android:layout_marginTop="5dp"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:id="@+id/relback">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/arrowblack"
                    android:layout_marginStart="0dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:text="Go Back"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="30dp"/>

            </RelativeLayout>
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="0.3">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtqqqq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="22dp"
                    android:text="Fish Health and Water Quality"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtqqqq"
                    android:layout_marginTop="10dp">

                    <RelativeLayout
                        android:id="@+id/rel4"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_below="@+id/rel3">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="25dp"
                            android:layout_marginBottom="50dp"
                            android:gravity="center"
                            android:text="Mortality"
                            android:textColor="@color/grey"
                            android:textSize="10dp"
                            android:textStyle="bold" />

                        <com.libizo.CustomEditText
                            android:id="@+id/mortality"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="25dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="25dp"
                            android:layout_marginBottom="15dp"
                            android:gravity="left|center"
                            android:inputType="textPersonName"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:typeface="sans"
                            app:libIZO_clearIconTint="@color/black"
                            app:libIZO_setBackgroundColor="#bfffffff"
                            app:libIZO_setBorderColor="@color/greylight"
                            app:libIZO_setBorderView="true"
                            app:libIZO_setClearIconVisible="true"
                            app:libIZO_setCornerRadius="3dp"
                            app:libIZO_setPrefixTextColor="@color/black"
                            app:libIZO_setStrokeWidth="1dp" />

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/rel1"
                        android:layout_width="match_parent"
                        android:layout_height="80dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="25dp"
                                android:layout_marginBottom="50dp"
                                android:gravity="center"
                                android:text="Ph Level"
                                android:textColor="@color/grey"
                                android:textSize="10dp"
                                android:textStyle="bold" />

                            <com.libizo.CustomEditText
                                android:id="@+id/phLevel"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="25dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginEnd="25dp"
                                android:layout_marginBottom="15dp"
                                android:gravity="left|center"
                                android:inputType="number"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textColorHint="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:typeface="sans"
                                app:libIZO_clearIconTint="@color/black"
                                app:libIZO_setBackgroundColor="#bfffffff"
                                app:libIZO_setBorderColor="@color/greylight"
                                app:libIZO_setBorderView="true"
                                app:libIZO_setClearIconVisible="true"
                                app:libIZO_setCornerRadius="3dp"
                                app:libIZO_setPrefixTextColor="@color/black"
                                app:libIZO_setStrokeWidth="1dp" />

                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="25dp"
                                android:layout_marginBottom="50dp"
                                android:gravity="center"
                                android:text="Color of Water"
                                android:textColor="@color/grey"
                                android:textSize="10dp"
                                android:textStyle="bold" />

                            <com.libizo.CustomEditText
                                android:id="@+id/colorOfWater"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="25dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginEnd="25dp"
                                android:layout_marginBottom="15dp"
                                android:gravity="left|center"
                                android:inputType="textPersonName"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textColorHint="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:typeface="sans"
                                app:libIZO_clearIconTint="@color/black"
                                app:libIZO_setBackgroundColor="#bfffffff"
                                app:libIZO_setBorderColor="@color/greylight"
                                app:libIZO_setBorderView="true"
                                app:libIZO_setClearIconVisible="true"
                                app:libIZO_setCornerRadius="3dp"
                                app:libIZO_setPrefixTextColor="@color/black"
                                app:libIZO_setStrokeWidth="1dp" />

                        </RelativeLayout>

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/rel2"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_below="@+id/rel1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="25dp"
                            android:layout_marginBottom="50dp"
                            android:gravity="center"
                            android:text="Water Picture"
                            android:textColor="@color/grey"
                            android:textSize="10dp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/camera"
                            android:scaleType="fitCenter"
                            android:foregroundGravity="center"
                            android:background="@color/greylight"
                            android:layout_marginStart="25dp"
                            android:layout_marginEnd="25dp"
                            android:layout_marginTop="25dp"
                            android:layout_marginBottom="25dp"
                            android:id="@+id/waterPicture"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rel3"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_below="@+id/rel2">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="25dp"
                            android:layout_marginBottom="50dp"
                            android:gravity="center"
                            android:text="Fish Disease Picture"
                            android:textColor="@color/grey"
                            android:textSize="10dp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/camera"
                            android:scaleType="fitCenter"
                            android:foregroundGravity="center"
                            android:background="@color/greylight"
                            android:layout_marginStart="25dp"
                            android:layout_marginEnd="25dp"
                            android:layout_marginTop="25dp"
                            android:layout_marginBottom="25dp"
                            android:id="@+id/FishDisease"/>

                    </RelativeLayout>



                    <LinearLayout
                        android:id="@+id/rel5"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_below="@+id/rel4">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="25dp"
                                android:layout_marginBottom="50dp"
                                android:gravity="center"
                                android:text="Oxygen"
                                android:textColor="@color/grey"
                                android:textSize="10dp"
                                android:textStyle="bold" />

                            <com.libizo.CustomEditText
                                android:id="@+id/Oxygen"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="25dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginEnd="25dp"
                                android:layout_marginBottom="15dp"
                                android:gravity="left|center"
                                android:inputType="number"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textColorHint="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:typeface="sans"
                                app:libIZO_clearIconTint="@color/black"
                                app:libIZO_setBackgroundColor="#bfffffff"
                                app:libIZO_setBorderColor="@color/greylight"
                                app:libIZO_setBorderView="true"
                                app:libIZO_setClearIconVisible="true"
                                app:libIZO_setCornerRadius="3dp"
                                app:libIZO_setPrefixTextColor="@color/black"
                                app:libIZO_setStrokeWidth="1dp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="50dp"
                                android:gravity="center"
                                android:text="Temparature °C"
                                android:textColor="@color/grey"
                                android:textSize="10dp"
                                android:textStyle="bold" />

                            <com.libizo.CustomEditText
                                android:id="@+id/Temperature"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="25dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginEnd="25dp"
                                android:layout_marginBottom="15dp"
                                android:gravity="left|center"
                                android:inputType="textPersonName"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textColorHint="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:typeface="sans"
                                app:libIZO_clearIconTint="@color/black"
                                app:libIZO_setBackgroundColor="#bfffffff"
                                app:libIZO_setBorderColor="@color/greylight"
                                app:libIZO_setBorderView="true"
                                app:libIZO_setClearIconVisible="true"
                                app:libIZO_setCornerRadius="3dp"
                                app:libIZO_setPrefixTextColor="@color/black"
                                app:libIZO_setStrokeWidth="1dp" />

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/rel6"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_below="@+id/rel5">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="25dp"
                                android:layout_marginBottom="50dp"
                                android:gravity="center"
                                android:text="Ammonia"
                                android:textColor="@color/grey"
                                android:textSize="10dp"
                                android:textStyle="bold" />

                            <com.libizo.CustomEditText
                                android:id="@+id/Ammonia"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="25dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginEnd="25dp"
                                android:layout_marginBottom="15dp"
                                android:gravity="left|center"
                                android:inputType="number"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textColorHint="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:typeface="sans"
                                app:libIZO_clearIconTint="@color/black"
                                app:libIZO_setBackgroundColor="#bfffffff"
                                app:libIZO_setBorderColor="@color/greylight"
                                app:libIZO_setBorderView="true"
                                app:libIZO_setClearIconVisible="true"
                                app:libIZO_setCornerRadius="3dp"
                                app:libIZO_setPrefixTextColor="@color/black"
                                app:libIZO_setStrokeWidth="1dp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="25dp"
                                android:layout_marginBottom="50dp"
                                android:gravity="center"
                                android:text="Nitrite"
                                android:textColor="@color/grey"
                                android:textSize="10dp"
                                android:textStyle="bold" />

                            <com.libizo.CustomEditText
                                android:id="@+id/Nitrite"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="15dp"
                                android:layout_marginEnd="25dp"
                                android:layout_marginBottom="15dp"
                                android:gravity="left|center"
                                android:inputType="number"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textColorHint="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:typeface="sans"
                                app:libIZO_clearIconTint="@color/black"
                                app:libIZO_setBackgroundColor="#bfffffff"
                                app:libIZO_setBorderColor="@color/greylight"
                                app:libIZO_setBorderView="true"
                                app:libIZO_setClearIconVisible="true"
                                app:libIZO_setCornerRadius="3dp"
                                app:libIZO_setPrefixTextColor="@color/black"
                                app:libIZO_setStrokeWidth="1dp" />

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/rel7"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_below="@+id/rel6">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/ggg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="25dp"
                                android:layout_marginBottom="50dp"
                                android:gravity="center"
                                android:text="Turbidity"
                                android:textColor="@color/grey"
                                android:textSize="10dp"
                                android:textStyle="bold" />

                            <com.libizo.CustomEditText
                                android:id="@+id/Turbidity"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="25dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginEnd="25dp"
                                android:layout_marginBottom="15dp"
                                android:gravity="left|center"
                                android:inputType="number"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textColorHint="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:typeface="sans"
                                app:libIZO_clearIconTint="@color/black"
                                app:libIZO_setBackgroundColor="#bfffffff"
                                app:libIZO_setBorderColor="@color/greylight"
                                app:libIZO_setBorderView="true"
                                app:libIZO_setClearIconVisible="true"
                                app:libIZO_setCornerRadius="3dp"
                                app:libIZO_setPrefixTextColor="@color/black"
                                app:libIZO_setStrokeWidth="1dp" />

                        </RelativeLayout>

                    </LinearLayout>

                    <com.dx.dxloadingbutton.lib.LoadingButton
                        android:id="@+id/btnSubmit"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_below="@+id/rel7"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="25dp"
                        app:lb_btnColor="@color/green"
                        app:lb_btnText="Add Pond"
                        app:lb_cornerRadius="5"

                        />

                </RelativeLayout>

            </RelativeLayout>

        </ScrollView>
    </LinearLayout>

</FrameLayout>